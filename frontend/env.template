# Agent Spy Frontend Environment Configuration Template
# Copy this file to .env.local and customize for your local development

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Base URL for Agent Spy backend API (includes /api/v1 suffix)
# Production: http://localhost:8000/api/v1
# Development: http://localhost:8001/api/v1
# Custom: http://your-backend-host:port/api/v1
API_URL_BASE=http://localhost:8000/api/v1
VITE_API_BASE_URL=${API_URL_BASE}

# =============================================================================
# PORT CONFIGURATION
# =============================================================================

# Backend server port (used for development proxy and error messages)
# Should match your backend server configuration
BACKEND_EXTERNAL_PORT=8000
VITE_BACKEND_PORT=${BACKEND_EXTERNAL_PORT}

# Frontend server port (used by Vite dev server)
# Production: 80 (handled by nginx)
# Development: 3000 (Vite default)
# Note: Internal ports are fixed (3000 for dev, 80 for prod)
FRONTEND_PORT=3000
VITE_FRONTEND_PORT=3000
FRONTEND_EXTERNAL_PORT=3000

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable development features (automatically set by Vite)
# DEV=true (in development)
# DEV=false (in production)

# Build mode (automatically set by Vite)
# MODE=development (in development)
# MODE=production (in production)

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Custom host for backend (if not localhost)
# BACKEND_HOST=your-backend-host.com
# VITE_BACKEND_HOST=${BACKEND_HOST}

# Enable HTTPS in development (requires SSL certificates)
# VITE_HTTPS=false

# API request timeout in milliseconds
# VITE_API_TIMEOUT=10000

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================

# WebSocket URL for real-time updates
# Production: ws://localhost:8000/ws
# Development: ws://localhost:8001/ws
# Custom: ws://your-backend-host:port/ws
# Docker: ws://host.docker.internal:8000/ws (for containerized deployments)
VITE_WS_URL=ws://localhost:8000/ws

# Enable real-time updates (true/false)
# VITE_ENABLE_REALTIME=true

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# These variables are automatically set by Docker Compose
# You typically don't need to set these manually

# Docker backend service name (used in docker-compose networking)
# VITE_BACKEND_SERVICE=backend

# Docker network configuration
# VITE_DOCKER_NETWORK=agentspy-network
