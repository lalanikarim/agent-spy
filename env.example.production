# =============================================================================
# Agent Spy Production Environment Configuration
# =============================================================================
# This file contains production-ready environment variables for the Agent Spy
# application. Copy this file to .env and modify values as needed for your
# production environment.
# =============================================================================

# =============================================================================
# POSTGRESQL DATABASE CONFIGURATION
# =============================================================================
# Database credentials and connection settings
POSTGRES_DB=agentspy
POSTGRES_USER=agentspy_user
POSTGRES_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
POSTGRES_PORT=5432
DATABASE_PORT=5439

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Environment and debug settings
ENVIRONMENT=production
DEBUG=false
HOST=0.0.0.0
PORT=8000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database type and connection settings
DATABASE_TYPE=postgresql
DATABASE_ECHO=false

# PostgreSQL connection details
DATABASE_HOST=host.docker.internal
DATABASE_NAME=agentspy
DATABASE_USER=agentspy_user
DATABASE_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
DATABASE_SSL_MODE=disable
DATABASE_MAX_CONNECTIONS=20

# =============================================================================
# API CONFIGURATION
# =============================================================================
# API settings and authentication
API_PREFIX=/api/v1
REQUIRE_AUTH=true
API_KEYS=CHANGE_ME_TO_SECURE_API_KEYS

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Cross-Origin Resource Sharing settings
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# =============================================================================
# OTLP (OpenTelemetry Protocol) CONFIGURATION
# =============================================================================
# OpenTelemetry protocol settings for trace collection
OTLP_HTTP_ENABLED=true
OTLP_HTTP_PATH=/v1/traces
OTLP_GRPC_ENABLED=true
BACKEND_OTLP_GRPC_HOST=0.0.0.0
BACKEND_OTLP_GRPC_PORT=4317

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Performance and resource limits
MAX_TRACE_SIZE_MB=10
REQUEST_TIMEOUT=30

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Logging level and format settings
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# EXTERNAL PORT MAPPINGS
# =============================================================================
# Port mappings for external access
BACKEND_EXTERNAL_PORT=8008
OTLP_EXTERNAL_PORT=4317
FRONTEND_EXTERNAL_PORT=3009

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Frontend connection settings
BACKEND_HOST=localhost

# =============================================================================
# SECURITY NOTES
# =============================================================================
# IMPORTANT: Change the following values in production:
# - POSTGRES_PASSWORD: Use a strong, unique password
# - DATABASE_PASSWORD: Should match POSTGRES_PASSWORD
# - API_KEYS: Use secure, randomly generated API keys
# - CORS_ORIGINS: Restrict to your actual domain(s)
# - REQUIRE_AUTH: Set to true in production
# - DATABASE_SSL_MODE: Consider enabling SSL for production databases
