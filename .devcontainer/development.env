# Agent Spy Development Environment Configuration
# This file contains environment variables for the dev container setup

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
ENVIRONMENT=development
DEBUG=true
APP_NAME=Agent Spy Development

# ============================================================================
# SERVER SETTINGS
# ============================================================================
HOST=0.0.0.0
PORT=8000
RELOAD=true

# ============================================================================
# DATABASE SETTINGS
# ============================================================================
DATABASE_URL=sqlite+aiosqlite:///workspace/dev-data/agentspy_dev.db
DATABASE_ECHO=true
DATABASE_POOL_SIZE=10

# ============================================================================
# API SETTINGS
# ============================================================================
API_PREFIX=/api/v1
REQUIRE_AUTH=false
# API_KEYS=dev-key-1,dev-key-2  # Uncomment to enable API key auth

# ============================================================================
# CORS SETTINGS (Permissive for development)
# ============================================================================
CORS_ORIGINS=*
CORS_CREDENTIALS=true

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================
MAX_TRACE_SIZE_MB=50
REQUEST_TIMEOUT=60

# ============================================================================
# LOGGING SETTINGS
# ============================================================================
LOG_LEVEL=DEBUG
LOG_FORMAT=text

# ============================================================================
# PYTHON SETTINGS
# ============================================================================
PYTHONPATH=/workspace
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# ============================================================================
# UV PACKAGE MANAGER SETTINGS
# ============================================================================
UV_SYSTEM_PYTHON=1
UV_CACHE_DIR=/home/vscode/.cache/uv

# ============================================================================
# FRONTEND SETTINGS
# ============================================================================
NODE_ENV=development
VITE_API_BASE_URL=http://localhost:8000

# File watching settings for hot reloading
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================
# Enable development features
ENABLE_DEV_ROUTES=true
ENABLE_DEBUG_TOOLBAR=true

# Testing settings
PYTEST_CURRENT_TEST=1

# ============================================================================
# CONTAINER SETTINGS
# ============================================================================
# These are used by Docker Compose
COMPOSE_PROJECT_NAME=agentspy-dev
COMPOSE_FILE=.devcontainer/docker-compose.dev.yml

# Port mappings
BACKEND_PORT=8000
FRONTEND_PORT=3000
VITE_PORT=5173
SQLITE_WEB_PORT=8080